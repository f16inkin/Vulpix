{
  "name": "f16inkin/Vulpix",
  "type": "library",
  "description": "Micro framework for my own ADR rest API Servers",
  "keywords": [
    "psr-4",
    "psr-7",
    "psr-11",
    "psr-15",
    "rest",
    "API",
    "ADR"
  ],
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "Mikkecy Finking",
      "email": "f16inkin@gmail.com",
      "homepage": "https://github.com/f16inkin",
      "role": "Developer"
    }
  ],
  "config": {
      "sort-packages": true
  },
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "aura/router": "^3.1",
    "firebase/php-jwt": "^5.2",
    "laminas/laminas-diactoros": "^2.2",
    "laminas/laminas-httphandlerrunner": "^1.1",
    "laminas/laminas-stratigility": "^3.2",
    "php-di/php-di": "^6.0",
    "ramsey/uuid": "^4.0"
  },
  "autoload": {
      "psr-4": {
          "Vulpix\\Engine\\": "src/Engine/"
      }
  },
  "require-dev": {
    "phpunit/phpunit": "^8.3"
  },
  "scripts": {
      "test": "phpunit --color=always"
  }
}
